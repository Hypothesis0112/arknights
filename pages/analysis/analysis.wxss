/* pages/analysis/analysis.wxss */
.stats-grid {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0 40rpx;
}

.stat-card {
  text-align: center;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  flex: 1;
  margin: 0 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #00bcd4;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.rate-section {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.rate-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #333;
}

.rate-value {
  color: #e91e63;
  font-weight: bold;
}

/* 卡池表格 */
.pool-row {
  display: flex;
  font-size: 26rpx;
  padding: 16rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pool-row.header {
  font-weight: bold;
  background: #f8f9fa;
  color: #555;
}

.cell {
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}