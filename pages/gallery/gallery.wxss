/* pages/gallery/gallery.wxss */

/* 页面容器 */
.container {
    padding: 20rpx;
    padding-bottom: 120rpx; /* 为tab-bar留出空间 */
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  /* 标题 */
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    margin: 20rpx 0 30rpx;
    text-align: center;
    color: white;
  }
  
  /* 过滤栏 */
  .filter-bar {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    background: white;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    align-items: center;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .filter-bar picker {
    flex: 1;
    margin: 0 10rpx;
    text-align: center;
  }
  
  .filter-bar picker view {
    padding: 15rpx 20rpx;
    background: #f0f2f5;
    border-radius: 8rpx;
    border: 1rpx solid #ddd;
    transition: background-color 0.2s;
  }
  
  .filter-bar picker view:active {
    background-color: #e0e0e0;
  }
  
  /* 空状态提示 */
  .empty-tip {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
    background: white;
    border-radius: 12rpx;
    margin-top: 20rpx;
  }
  
  /* 干员网格 */
  .operator-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
  }
  
  /* 干员卡片 */
  .operator-card {
    background: #f0f2f5;
    border-radius: 12rpx;
    padding: 20rpx 10rpx;
    text-align: center;
    position: relative;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
    transition: transform 0.2s, box-shadow 0.2s;
    overflow: hidden;
  }
  
  .operator-card:active {
    transform: scale(0.98);
    box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 已拥有样式 */
  .operator-card.owned {
    background: #e8f5e9;
    border: 2rpx solid #4caf50;
    position: relative;
  }
  
  .operator-card.owned::before {
    content: "✓";
    position: absolute;
    top: 8rpx;
    left: 8rpx;
    width: 24rpx;
    height: 24rpx;
    background: #4caf50;
    color: white;
    border-radius: 50%;
    font-size: 18rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* 稀有度标签 */
  .rarity-tag {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    color: white;
    font-size: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx solid white;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
    font-weight: bold;
  }
  
  .rarity-tag.six {
    background-color: #ff9800; /* 6星橙色 */
  }
  
  .rarity-tag.five {
    background-color: #9c27b0; /* 5星紫色 */
  }
  
  /* 干员名称 */
  .operator-name {
    font-size: 26rpx;
    font-weight: bold;
    margin: 10rpx 0 5rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #333;
  }
  
  /* 职业 */
  .operator-class {
    font-size: 22rpx;
    color: #666;
    margin-top: 5rpx;
  }