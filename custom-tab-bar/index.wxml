<view class="tab-bar">
  <!-- 记录 -->
  <view 
    class="tab-item {{selected === 0 ? 'active' : ''}}"
    data-index="0"
    bindtap="switchTab"
  >
    <image 
      class="tab-icon" 
      src="{{iconPaths[0]}}"  
      mode="aspectFit"
    ></image>
    <text>记录</text>
  </view>
  
  <!-- 分析 -->
  <view 
    class="tab-item {{selected === 1 ? 'active' : ''}}"
    data-index="1"
    bindtap="switchTab"
  >
    <image 
      class="tab-icon" 
      src="{{iconPaths[1]}}"  
      mode="aspectFit"
    ></image>
    <text>分析</text>
  </view>
  
  <!-- 图鉴 -->
  <view 
    class="tab-item {{selected === 2 ? 'active' : ''}}"
    data-index="2"
    bindtap="switchTab"
  >
    <image 
      class="tab-icon" 
      src="{{iconPaths[2]}}"  
      mode="aspectFit"
    ></image>
    <text>图鉴</text>
  </view>
  
  <!-- 导出 -->
  <view 
    class="tab-item {{selected === 3 ? 'active' : ''}}"
    data-index="3"
    bindtap="switchTab"
  >
    <image 
      class="tab-icon" 
      src="{{iconPaths[3]}}"  
      mode="aspectFit"
    ></image>
    <text>导出</text>
  </view>
</view>